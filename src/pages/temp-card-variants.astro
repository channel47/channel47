---
import BaseLayout from '../layouts/BaseLayout.astro';

// Sample skill data
const sampleSkill = {
  title: "Performance Max Diagnostic",
  description: "Deep-dive analysis of your PMax campaigns with actionable recommendations for asset groups, audiences, and bidding strategies.",
  category: "Google Ads",
  tier: "premium" as const,
  price: 29,
  tags: ["pmax", "audit", "optimization"],
};

const sampleFree = {
  title: "Search Term Audit",
  description: "Identify wasted spend and discover high-intent queries hiding in your search terms report.",
  category: "Google Ads",
  tier: "free" as const,
  price: 0,
  tags: ["search", "negative keywords"],
};
---

<BaseLayout title="Card Variants | Channel47">
  <main class="variants-page">
    <header class="variants-header">
      <h1>Product Card Variants</h1>
      <p>Select a design direction for skill product cards</p>
    </header>

    <!-- VARIANT A: Minimal Glow -->
    <section class="variant-section">
      <div class="variant-label">
        <span class="variant-letter">A</span>
        <span class="variant-name">Minimal Glow</span>
      </div>
      <p class="variant-desc">Clean lines with subtle accent glow on hover. Focus on typography hierarchy.</p>
      <div class="card-showcase">
        <article class="card-a">
          <div class="card-a__badge" data-tier="premium">$29</div>
          <div class="card-a__content">
            <span class="card-a__category">{sampleSkill.category}</span>
            <h3 class="card-a__title">{sampleSkill.title}</h3>
            <p class="card-a__description">{sampleSkill.description}</p>
          </div>
          <div class="card-a__footer">
            <span class="card-a__cta">View skill →</span>
          </div>
        </article>
        <article class="card-a">
          <div class="card-a__badge" data-tier="free">Free</div>
          <div class="card-a__content">
            <span class="card-a__category">{sampleFree.category}</span>
            <h3 class="card-a__title">{sampleFree.title}</h3>
            <p class="card-a__description">{sampleFree.description}</p>
          </div>
          <div class="card-a__footer">
            <span class="card-a__cta">View skill →</span>
          </div>
        </article>
      </div>
    </section>

    <!-- VARIANT E: Gradient Border -->
    <section class="variant-section">
      <div class="variant-label">
        <span class="variant-letter">E</span>
        <span class="variant-name">Gradient Border</span>
      </div>
      <p class="variant-desc">Animated gradient border on hover. Modern, high-end aesthetic.</p>
      <div class="card-showcase">
        <article class="card-e" data-tier="premium">
          <div class="card-e__inner">
            <div class="card-e__header">
              <span class="card-e__category">{sampleSkill.category}</span>
              <span class="card-e__price">$29</span>
            </div>
            <h3 class="card-e__title">{sampleSkill.title}</h3>
            <p class="card-e__description">{sampleSkill.description}</p>
            <div class="card-e__footer">
              <div class="card-e__tags">
                {sampleSkill.tags.map(tag => <span class="card-e__tag">{tag}</span>)}
              </div>
            </div>
          </div>
        </article>
        <article class="card-e" data-tier="free">
          <div class="card-e__inner">
            <div class="card-e__header">
              <span class="card-e__category">{sampleFree.category}</span>
              <span class="card-e__price">Free</span>
            </div>
            <h3 class="card-e__title">{sampleFree.title}</h3>
            <p class="card-e__description">{sampleFree.description}</p>
            <div class="card-e__footer">
              <div class="card-e__tags">
                {sampleFree.tags.map(tag => <span class="card-e__tag">{tag}</span>)}
              </div>
            </div>
          </div>
        </article>
      </div>
    </section>

    <!-- VARIANT F: Compact Badge -->
    <section class="variant-section">
      <div class="variant-label">
        <span class="variant-letter">F</span>
        <span class="variant-name">Compact Badge</span>
      </div>
      <p class="variant-desc">Corner badge with notched design. Efficient use of space, strong visual identity.</p>
      <div class="card-showcase">
        <article class="card-f">
          <div class="card-f__badge" data-tier="premium">
            <span>$29</span>
          </div>
          <div class="card-f__content">
            <span class="card-f__category">{sampleSkill.category}</span>
            <h3 class="card-f__title">{sampleSkill.title}</h3>
            <p class="card-f__description">{sampleSkill.description}</p>
          </div>
          <div class="card-f__bar"></div>
        </article>
        <article class="card-f">
          <div class="card-f__badge" data-tier="free">
            <span>Free</span>
          </div>
          <div class="card-f__content">
            <span class="card-f__category">{sampleFree.category}</span>
            <h3 class="card-f__title">{sampleFree.title}</h3>
            <p class="card-f__description">{sampleFree.description}</p>
          </div>
          <div class="card-f__bar" data-tier="free"></div>
        </article>
      </div>
    </section>

    <!-- VARIANT G: Scroll-Triggered Border Fill -->
    <section class="variant-section">
      <div class="variant-label">
        <span class="variant-letter">G</span>
        <span class="variant-name">Border Fill (Scroll)</span>
      </div>
      <p class="variant-desc">Gradient border "fills up" around the card perimeter when scrolled into view. Creates anticipation and allure.</p>
      <div class="card-showcase">
        <article class="card-g" data-tier="premium">
          <div class="card-g__border"></div>
          <div class="card-g__inner">
            <div class="card-g__header">
              <span class="card-g__category">{sampleSkill.category}</span>
              <span class="card-g__price">$29</span>
            </div>
            <h3 class="card-g__title">{sampleSkill.title}</h3>
            <p class="card-g__description">{sampleSkill.description}</p>
            <div class="card-g__footer">
              <div class="card-g__tags">
                {sampleSkill.tags.map(tag => <span class="card-g__tag">{tag}</span>)}
              </div>
              <span class="card-g__cta">View skill →</span>
            </div>
          </div>
        </article>
        <article class="card-g" data-tier="free">
          <div class="card-g__border"></div>
          <div class="card-g__inner">
            <div class="card-g__header">
              <span class="card-g__category">{sampleFree.category}</span>
              <span class="card-g__price">Free</span>
            </div>
            <h3 class="card-g__title">{sampleFree.title}</h3>
            <p class="card-g__description">{sampleFree.description}</p>
            <div class="card-g__footer">
              <div class="card-g__tags">
                {sampleFree.tags.map(tag => <span class="card-g__tag">{tag}</span>)}
              </div>
              <span class="card-g__cta">View skill →</span>
            </div>
          </div>
        </article>
      </div>
    </section>

  </main>
</BaseLayout>

<script>
  // Scroll-triggered animation for card-g
  function initScrollAnimation() {
    const cards = document.querySelectorAll('.card-g');

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
        }
      });
    }, {
      threshold: 0.3,
      rootMargin: '0px 0px -50px 0px'
    });

    cards.forEach(card => observer.observe(card));
  }

  // Run on initial load
  initScrollAnimation();

  // Re-run on Astro page transitions
  document.addEventListener('astro:page-load', initScrollAnimation);
</script>

<style>
  .variants-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: var(--space-8) var(--space-4);
  }

  .variants-header {
    text-align: center;
    margin-bottom: var(--space-12);
  }

  .variants-header h1 {
    font-family: var(--font-display);
    font-size: var(--text-4xl);
    font-weight: var(--font-bold);
    color: var(--color-text-primary);
    margin-bottom: var(--space-2);
  }

  .variants-header p {
    font-family: var(--font-body);
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
  }

  .variant-section {
    margin-bottom: var(--space-16);
    padding-bottom: var(--space-12);
    border-bottom: 1px solid var(--color-border-subtle);
  }

  .variant-section:last-child {
    border-bottom: none;
  }

  .variant-label {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    margin-bottom: var(--space-2);
  }

  .variant-letter {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    background: var(--color-accent);
    color: var(--color-bg);
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    font-weight: var(--font-bold);
    border-radius: var(--radius-md);
  }

  .variant-name {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    font-weight: var(--font-semibold);
    color: var(--color-text-primary);
  }

  .variant-desc {
    font-family: var(--font-body);
    font-size: var(--text-base);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-6);
  }

  .card-showcase {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: var(--space-6);
  }

  /* ========================================
     VARIANT A: Minimal Glow
     ======================================== */
  .card-a {
    position: relative;
    display: flex;
    flex-direction: column;
    padding: var(--space-6);
    background: var(--color-surface);
    border: 1px solid var(--color-border-subtle);
    border-radius: var(--radius-xl);
    transition:
      transform var(--duration-fast) var(--ease-out),
      border-color var(--duration-fast) var(--ease-out),
      box-shadow var(--duration-normal) var(--ease-out);
    cursor: pointer;
  }

  .card-a:hover {
    border-color: var(--color-accent);
    box-shadow:
      0 0 0 1px var(--color-accent),
      0 0 20px oklch(70% 0.15 30 / 0.25),
      0 0 40px oklch(70% 0.15 30 / 0.1);
    transform: translateY(-3px);
  }

  .card-a__badge {
    position: absolute;
    top: var(--space-4);
    right: var(--space-4);
    padding: var(--space-1) var(--space-3);
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    font-weight: var(--font-bold);
    border-radius: var(--radius-full);
    letter-spacing: 0.02em;
  }

  .card-a__badge[data-tier="premium"] {
    background: var(--color-accent);
    color: var(--color-bg);
    box-shadow: 0 2px 8px oklch(70% 0.15 30 / 0.3);
  }

  .card-a__badge[data-tier="free"] {
    background: var(--color-success);
    color: var(--color-bg);
    box-shadow: 0 2px 8px oklch(70% 0.15 145 / 0.3);
  }

  .card-a__content {
    flex: 1;
    padding-right: var(--space-10);
  }

  .card-a__category {
    display: inline-block;
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
  }

  .card-a__title {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    font-weight: var(--font-semibold);
    color: var(--color-text-primary);
    margin: var(--space-2) 0 var(--space-3);
    line-height: var(--leading-snug);
  }

  .card-a__description {
    font-family: var(--font-body);
    font-size: var(--text-base);
    color: var(--color-text-secondary);
    line-height: var(--leading-relaxed);
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-a__footer {
    margin-top: var(--space-4);
    padding-top: var(--space-4);
    border-top: 1px solid var(--color-border-subtle);
  }

  .card-a__cta {
    font-family: var(--font-display);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    color: var(--color-accent);
    transition:
      color var(--duration-fast),
      letter-spacing var(--duration-fast);
  }

  .card-a:hover .card-a__cta {
    color: var(--color-accent-hover);
    letter-spacing: 0.03em;
  }

  /* ========================================
     VARIANT E: Gradient Border
     ======================================== */
  .card-e {
    --border-width: 2px;
    position: relative;
    padding: var(--border-width);
    border-radius: var(--radius-xl);
    background: var(--color-border-subtle);
    transition:
      transform var(--duration-fast) var(--ease-out),
      box-shadow var(--duration-normal) var(--ease-out);
    cursor: pointer;
  }

  .card-e::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: var(--radius-xl);
    background: linear-gradient(
      135deg,
      var(--color-accent) 0%,
      oklch(75% 0.12 50) 35%,
      oklch(65% 0.18 40) 65%,
      var(--color-accent) 100%
    );
    background-size: 200% 200%;
    opacity: 0;
    transition:
      opacity var(--duration-normal) var(--ease-out),
      background-position var(--duration-slow) var(--ease-out);
    z-index: 0;
  }

  .card-e[data-tier="free"]::before {
    background: linear-gradient(
      135deg,
      var(--color-success) 0%,
      oklch(75% 0.1 130) 35%,
      oklch(60% 0.15 160) 65%,
      var(--color-success) 100%
    );
    background-size: 200% 200%;
  }

  .card-e:hover::before {
    opacity: 1;
    background-position: 100% 100%;
  }

  .card-e:hover {
    transform: translateY(-3px);
    box-shadow:
      0 0 20px oklch(70% 0.15 30 / 0.2),
      0 8px 24px oklch(0% 0 0 / 0.1);
  }

  .card-e[data-tier="free"]:hover {
    box-shadow:
      0 0 20px oklch(70% 0.15 145 / 0.2),
      0 8px 24px oklch(0% 0 0 / 0.1);
  }

  .card-e__inner {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    padding: var(--space-6);
    background: var(--color-surface);
    border-radius: calc(var(--radius-xl) - var(--border-width));
    height: 100%;
  }

  .card-e__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-3);
  }

  .card-e__category {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
  }

  .card-e__price {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    font-weight: var(--font-bold);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-full);
    transition: all var(--duration-fast) var(--ease-out);
  }

  .card-e[data-tier="premium"] .card-e__price {
    color: var(--color-accent);
    background: oklch(70% 0.15 30 / 0.1);
  }

  .card-e[data-tier="premium"]:hover .card-e__price {
    color: var(--color-bg);
    background: var(--color-accent);
  }

  .card-e[data-tier="free"] .card-e__price {
    color: var(--color-success);
    background: oklch(70% 0.15 145 / 0.1);
  }

  .card-e[data-tier="free"]:hover .card-e__price {
    color: var(--color-bg);
    background: var(--color-success);
  }

  .card-e__title {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    font-weight: var(--font-semibold);
    color: var(--color-text-primary);
    margin-bottom: var(--space-3);
    line-height: var(--leading-snug);
  }

  .card-e__description {
    font-family: var(--font-body);
    font-size: var(--text-base);
    color: var(--color-text-secondary);
    line-height: var(--leading-relaxed);
    flex: 1;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-e__footer {
    margin-top: var(--space-4);
    padding-top: var(--space-4);
    border-top: 1px solid var(--color-border-subtle);
  }

  .card-e__tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  .card-e__tag {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    padding: var(--space-1) var(--space-2);
    background: var(--color-bg);
    border-radius: var(--radius-sm);
    transition: color var(--duration-fast);
  }

  .card-e:hover .card-e__tag {
    color: var(--color-text-secondary);
  }

  /* ========================================
     VARIANT F: Compact Badge
     ======================================== */
  .card-f {
    position: relative;
    display: flex;
    flex-direction: column;
    background: var(--color-surface);
    border: 1px solid var(--color-border-subtle);
    border-radius: var(--radius-xl);
    overflow: hidden;
    transition:
      transform var(--duration-fast) var(--ease-out),
      border-color var(--duration-fast) var(--ease-out),
      box-shadow var(--duration-fast) var(--ease-out);
    cursor: pointer;
  }

  .card-f:hover {
    border-color: var(--color-border);
    transform: translateY(-3px);
    box-shadow:
      0 4px 12px oklch(0% 0 0 / 0.12),
      0 8px 24px oklch(0% 0 0 / 0.08);
  }

  .card-f__badge {
    position: absolute;
    top: 0;
    right: 0;
    padding: var(--space-2) var(--space-5);
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    font-weight: var(--font-bold);
    border-bottom-left-radius: var(--radius-xl);
    transition: transform var(--duration-fast) var(--ease-out);
  }

  .card-f:hover .card-f__badge {
    transform: scale(1.02);
  }

  .card-f__badge[data-tier="premium"] {
    background: linear-gradient(
      135deg,
      var(--color-accent) 0%,
      oklch(65% 0.18 35) 100%
    );
    color: var(--color-bg);
    box-shadow:
      0 2px 8px oklch(70% 0.15 30 / 0.25),
      inset 0 1px 0 oklch(100% 0 0 / 0.15);
  }

  .card-f__badge[data-tier="free"] {
    background: linear-gradient(
      135deg,
      var(--color-success) 0%,
      oklch(60% 0.18 155) 100%
    );
    color: var(--color-bg);
    box-shadow:
      0 2px 8px oklch(70% 0.15 145 / 0.25),
      inset 0 1px 0 oklch(100% 0 0 / 0.15);
  }

  .card-f__content {
    padding: var(--space-6);
    padding-right: calc(var(--space-6) + 70px);
    flex: 1;
  }

  .card-f__category {
    display: inline-block;
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    margin-bottom: var(--space-2);
  }

  .card-f__title {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    font-weight: var(--font-semibold);
    color: var(--color-text-primary);
    margin-bottom: var(--space-3);
    line-height: var(--leading-snug);
    transition: color var(--duration-fast);
  }

  .card-f:hover .card-f__title {
    color: var(--color-fg);
  }

  .card-f__description {
    font-family: var(--font-body);
    font-size: var(--text-base);
    color: var(--color-text-secondary);
    line-height: var(--leading-relaxed);
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-f__bar {
    height: 3px;
    background: linear-gradient(
      90deg,
      var(--color-accent) 0%,
      oklch(75% 0.12 50) 100%
    );
    transform: scaleX(0);
    transform-origin: left;
    transition: transform var(--duration-normal) cubic-bezier(0.22, 1, 0.36, 1);
  }

  .card-f__bar[data-tier="free"] {
    background: linear-gradient(
      90deg,
      var(--color-success) 0%,
      oklch(75% 0.1 130) 100%
    );
  }

  .card-f:hover .card-f__bar {
    transform: scaleX(1);
  }

  /* ========================================
     VARIANT G: Scroll-Triggered Border Fill
     ======================================== */
  .card-g {
    --border-width: 2px;
    --card-radius: var(--radius-xl);
    position: relative;
    padding: var(--border-width);
    border-radius: var(--card-radius);
    background: var(--color-border-subtle);
    transition:
      transform var(--duration-fast) var(--ease-out),
      box-shadow var(--duration-normal) var(--ease-out);
    cursor: pointer;
  }

  /* The animated border - uses conic gradient that reveals on scroll */
  .card-g__border {
    position: absolute;
    inset: 0;
    border-radius: var(--card-radius);
    background: conic-gradient(
      from 0deg at 50% 50%,
      var(--color-accent) 0deg,
      oklch(75% 0.12 50) 90deg,
      oklch(65% 0.18 40) 180deg,
      oklch(70% 0.15 35) 270deg,
      var(--color-accent) 360deg
    );
    opacity: 0;
    transition: opacity 0.6s var(--ease-out);
    z-index: 0;
  }

  /* Mask that creates the "fill up" effect */
  .card-g__border::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: var(--card-radius);
    background: conic-gradient(
      from 225deg at 50% 50%,
      transparent 0deg,
      var(--color-bg) 0deg
    );
    transition: background 1.2s cubic-bezier(0.22, 1, 0.36, 1);
  }

  /* When visible - animate the fill */
  .card-g.is-visible .card-g__border {
    opacity: 1;
  }

  .card-g.is-visible .card-g__border::before {
    background: conic-gradient(
      from 225deg at 50% 50%,
      transparent 360deg,
      var(--color-bg) 360deg
    );
  }

  /* Free tier colors */
  .card-g[data-tier="free"] .card-g__border {
    background: conic-gradient(
      from 0deg at 50% 50%,
      var(--color-success) 0deg,
      oklch(75% 0.1 130) 90deg,
      oklch(60% 0.15 160) 180deg,
      oklch(68% 0.12 145) 270deg,
      var(--color-success) 360deg
