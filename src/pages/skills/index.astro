---
/**
 * Skills Index Page
 *
 * Product catalog for Skills.
 * Displays individual skills from the collection alongside skill suites.
 */

import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import ProductSkillCard from '../../components/ProductSkillCard.astro';
import EmailSignup from '../../components/EmailSignup.astro';

// Get all published skills from the collection
const allSkills = await getCollection('skills', ({ data }) => !data.draft);

// Sort: featured first, then by publish date
const skills = allSkills.sort((a, b) => {
  if (a.data.featured && !b.data.featured) return -1;
  if (!a.data.featured && b.data.featured) return 1;
  return new Date(b.data.publishedAt).getTime() - new Date(a.data.publishedAt).getTime();
});

// Skill Suites - curated bundles (link to landing pages)
const skillSuites = [
  {
    name: 'Google Ads Skills',
    description: 'Ten years of media buying. One install.',
    price: '$199',
    href: '/skills/google-ads',
    available: true,
  },
  {
    name: 'Ad Creative Skills',
    description: 'Platform specs, best practices, what actually converts.',
    price: 'Coming soon',
    href: '/skills/ad-creative',
    available: false,
  },
];
---

<BaseLayout
  title="Skills â€” Jig"
  description="Packaged expertise for AI tools. Browse skill files that teach Claude, Cursor, and other AI tools how to actually do the job."
>
  <Header />

  <main class="skills-index">
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero__content">
        <h1 class="hero__title">Expertise, packaged.</h1>
        <p class="hero__subtitle">
          Skill files that teach your AI tools how to actually do the job.
        </p>
      </div>
    </section>

    <!-- Individual Skills -->
    {skills.length > 0 && (
      <section class="skills-section">
        <div class="section-header">
          <h2 class="section-title">Individual Skills</h2>
          <p class="section-subtitle">Focused tools for specific tasks</p>
        </div>
        <div class="skills-grid">
          {skills.map((skill) => (
            <ProductSkillCard
              title={skill.data.title}
              description={skill.data.description}
              href={`/skills/${skill.slug}`}
              category={skill.data.category}
              tier={skill.data.tier}
              price={skill.data.price}
              tags={skill.data.tags}
              featured={skill.data.featured}
            />
          ))}
        </div>
      </section>
    )}

    <!-- Skill Suites -->
    <section class="suites-section">
      <div class="section-header">
        <h2 class="section-title">Skill Suites</h2>
        <p class="section-subtitle">Complete toolkits for entire disciplines</p>
      </div>
      <div class="suites-grid">
        {skillSuites.map((suite) => (
          <a
            href={suite.href}
            class={`suite-card ${!suite.available ? 'suite-card--coming-soon' : ''}`}
          >
            <div class="suite-card__content">
              <h3 class="suite-card__name">{suite.name}</h3>
              <p class="suite-card__description">{suite.description}</p>
            </div>
            <div class="suite-card__footer">
              <span class={`suite-card__price ${!suite.available ? 'suite-card__price--muted' : ''}`}>
                {suite.price}
              </span>
              {suite.available ? (
                <span class="suite-card__cta">View suite &rarr;</span>
              ) : (
                <span class="suite-card__cta suite-card__cta--muted">Learn more &rarr;</span>
              )}
            </div>
          </a>
        ))}
      </div>
    </section>

    <!-- Email Signup -->
    <section class="signup-section">
      <div class="signup-wrapper">
        <EmailSignup
          title="New skills in the works."
          description="Leave your email. We'll let you know when they're ready."
          buttonText="Subscribe"
          variant="card"
        />
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  .skills-index {
    display: flex;
    flex-direction: column;
  }

  /* Hero Section */
  .hero {
    padding: var(--space-16) var(--space-4) var(--space-10);
    text-align: center;
  }

  @media (min-width: 768px) {
    .hero {
      padding: var(--space-24) var(--space-8) var(--space-16);
    }
  }

  .hero__content {
    max-width: var(--container-md);
    margin: 0 auto;
  }

  .hero__title {
    font-size: var(--text-3xl);
    font-weight: var(--font-black);
    letter-spacing: var(--tracking-tighter);
    margin-bottom: var(--space-4);
    color: var(--color-fg);
    line-height: 1.1;
  }

  @media (min-width: 480px) {
    .hero__title {
      font-size: var(--text-4xl);
    }
  }

  @media (min-width: 768px) {
    .hero__title {
      font-size: var(--text-5xl);
      letter-spacing: var(--tracking-tightest);
    }
  }

  .hero__subtitle {
    font-size: var(--text-base);
    color: var(--color-fg-secondary);
    line-height: var(--leading-relaxed);
    max-width: 45ch;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .hero__subtitle {
      font-size: var(--text-lg);
    }
  }

  /* Section Headers */
  .section-header {
    margin-bottom: var(--space-6);
  }

  @media (min-width: 768px) {
    .section-header {
      margin-bottom: var(--space-8);
    }
  }

  .section-title {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    color: var(--color-fg);
    margin-bottom: var(--space-1);
  }

  @media (min-width: 768px) {
    .section-title {
      font-size: var(--text-2xl);
    }
  }

  .section-subtitle {
    font-size: var(--text-sm);
    color: var(--color-fg-muted);
  }

  @media (min-width: 768px) {
    .section-subtitle {
      font-size: var(--text-base);
    }
  }

  /* Skills Section */
  .skills-section {
    padding: var(--space-8) var(--space-4);
  }

  @media (min-width: 768px) {
    .skills-section {
      padding: var(--space-12) var(--space-8);
    }
  }

  .skills-grid {
    display: grid;
    gap: var(--space-4);
    max-width: var(--container-lg);
    margin: 0 auto;
  }

  @media (min-width: 640px) {
    .skills-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-6);
    }
  }

  @media (min-width: 1024px) {
    .skills-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  /* Suites Section */
  .suites-section {
    padding: var(--space-8) var(--space-4);
    background-color: var(--color-bg);
  }

  @media (min-width: 768px) {
    .suites-section {
      padding: var(--space-12) var(--space-8);
    }
  }

  .suites-grid {
    display: grid;
    gap: var(--space-4);
    max-width: var(--container-lg);
    margin: 0 auto;
  }

  @media (min-width: 640px) {
    .suites-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-6);
    }
  }

  /* Suite Card */
  .suite-card {
    display: flex;
    flex-direction: column;
    padding: var(--space-6);
    background-color: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    text-decoration: none;
    transition: all var(--duration-fast) var(--ease-out);
  }

  @media (min-width: 768px) {
    .suite-card {
      padding: var(--space-8);
    }
  }

  .suite-card:hover {
    border-color: var(--color-accent);
    transform: translateY(-2px);
  }

  .suite-card--coming-soon {
    opacity: 0.8;
  }

  .suite-card--coming-soon:hover {
    border-color: var(--color-border);
    transform: none;
  }

  .suite-card__content {
    flex: 1;
    margin-bottom: var(--space-6);
  }

  .suite-card__name {
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    color: var(--color-fg);
    margin-bottom: var(--space-2);
  }

  @media (min-width: 768px) {
    .suite-card__name {
      font-size: var(--text-2xl);
    }
  }

  .suite-card__description {
    font-size: var(--text-sm);
    color: var(--color-fg-secondary);
    margin: 0;
    line-height: var(--leading-relaxed);
  }

  @media (min-width: 768px) {
    .suite-card__description {
      font-size: var(--text-base);
    }
  }

  .suite-card__footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: var(--space-4);
    border-top: 1px solid var(--color-border);
  }

  .suite-card__price {
    font-family: var(--font-sans);
    font-size: var(--text-lg);
    font-weight: var(--font-bold);
    color: var(--color-fg);
  }

  @media (min-width: 768px) {
    .suite-card__price {
      font-size: var(--text-xl);
    }
  }

  .suite-card__price--muted {
    font-weight: var(--font-medium);
    color: var(--color-fg-muted);
  }

  .suite-card__cta {
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    color: var(--color-accent);
  }

  .suite-card__cta--muted {
    color: var(--color-fg-muted);
  }

  /* Signup Section */
  .signup-section {
    padding: var(--space-8) var(--space-4);
    padding-bottom: var(--space-16);
    background-color: var(--color-bg-elevated);
  }

  @media (min-width: 768px) {
    .signup-section {
      padding: var(--space-12) var(--space-8);
      padding-bottom: var(--space-20);
    }
  }

  .signup-wrapper {
    max-width: var(--container-sm);
    margin: 0 auto;
  }
</style>
