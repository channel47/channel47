---
/**
 * Skills Index Page
 *
 * Product catalog for Skill Suites.
 * Clean, minimal. Let the products speak.
 */

import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Button from '../../components/Button.astro';
import EmailSignup from '../../components/EmailSignup.astro';

// Product data - add new products here
const products = [
  {
    name: 'Google Ads Skills',
    description: 'Ten years of media buying. One install.',
    price: '$199',
    href: '/skills/google-ads',
    available: true,
  },
  {
    name: 'Ad Creative Skills',
    description: 'Platform specs, best practices, what actually converts.',
    price: 'Coming soon',
    href: '/skills/ad-creative',
    available: false,
  },
];
---

<BaseLayout
  title="Skill Suites — Jig"
  description="Packaged expertise for AI tools. Browse skill files that teach Claude, Cursor, and other AI tools how to actually do the job."
>
  <Header />

  <main class="skills-index">
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero__content">
        <h1 class="hero__title">Expertise, packaged.</h1>
        <p class="hero__subtitle">
          Skill files that teach your AI tools how to actually do the job.
        </p>
      </div>
    </section>

    <!-- Products Grid -->
    <section class="products-section">
      <div class="products-grid">
        {products.map((product) => (
          <a
            href={product.href}
            class={`product-card ${!product.available ? 'product-card--coming-soon' : ''}`}
          >
            <div class="product-card__content">
              <h2 class="product-card__name">{product.name}</h2>
              <p class="product-card__description">{product.description}</p>
            </div>
            <div class="product-card__footer">
              <span class={`product-card__price ${!product.available ? 'product-card__price--muted' : ''}`}>
                {product.price}
              </span>
              {product.available ? (
                <span class="product-card__cta">View details →</span>
              ) : (
                <span class="product-card__cta product-card__cta--muted">Learn more →</span>
              )}
            </div>
          </a>
        ))}
      </div>
    </section>

    <!-- Email Signup -->
    <section class="signup-section">
      <div class="signup-wrapper">
        <EmailSignup
          title="New skills in the works."
          description="Leave your email. We'll let you know when they're ready."
          buttonText="Subscribe"
          variant="card"
        />
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  .skills-index {
    display: flex;
    flex-direction: column;
  }

  /* Hero Section */
  .hero {
    padding: var(--space-16) var(--space-4) var(--space-10);
    text-align: center;
  }

  @media (min-width: 768px) {
    .hero {
      padding: var(--space-24) var(--space-8) var(--space-16);
    }
  }

  .hero__content {
    max-width: var(--container-md);
    margin: 0 auto;
  }

  .hero__title {
    font-size: var(--text-3xl);
    font-weight: var(--font-black);
    letter-spacing: var(--tracking-tighter);
    margin-bottom: var(--space-4);
    color: var(--color-fg);
    line-height: 1.1;
  }

  @media (min-width: 480px) {
    .hero__title {
      font-size: var(--text-4xl);
    }
  }

  @media (min-width: 768px) {
    .hero__title {
      font-size: var(--text-5xl);
      letter-spacing: var(--tracking-tightest);
    }
  }

  .hero__subtitle {
    font-size: var(--text-base);
    color: var(--color-fg-secondary);
    line-height: var(--leading-relaxed);
    max-width: 45ch;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .hero__subtitle {
      font-size: var(--text-lg);
    }
  }

  /* Products Section */
  .products-section {
    padding: var(--space-8) var(--space-4);
  }

  @media (min-width: 768px) {
    .products-section {
      padding: var(--space-12) var(--space-8);
    }
  }

  .products-grid {
    display: grid;
    gap: var(--space-4);
    max-width: var(--container-lg);
    margin: 0 auto;
  }

  @media (min-width: 640px) {
    .products-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-6);
    }
  }

  /* Product Card */
  .product-card {
    display: flex;
    flex-direction: column;
    padding: var(--space-6);
    background-color: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    text-decoration: none;
    transition: all var(--duration-fast) var(--ease-out);
  }

  @media (min-width: 768px) {
    .product-card {
      padding: var(--space-8);
    }
  }

  .product-card:hover {
    border-color: var(--color-accent);
    transform: translateY(-2px);
  }

  .product-card--coming-soon {
    opacity: 0.8;
  }

  .product-card--coming-soon:hover {
    border-color: var(--color-border);
    transform: none;
  }

  .product-card__content {
    flex: 1;
    margin-bottom: var(--space-6);
  }

  .product-card__name {
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    color: var(--color-fg);
    margin-bottom: var(--space-2);
  }

  @media (min-width: 768px) {
    .product-card__name {
      font-size: var(--text-2xl);
    }
  }

  .product-card__description {
    font-size: var(--text-sm);
    color: var(--color-fg-secondary);
    margin: 0;
    line-height: var(--leading-relaxed);
  }

  @media (min-width: 768px) {
    .product-card__description {
      font-size: var(--text-base);
    }
  }

  .product-card__footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: var(--space-4);
    border-top: 1px solid var(--color-border);
  }

  .product-card__price {
    font-family: var(--font-sans);
    font-size: var(--text-lg);
    font-weight: var(--font-bold);
    color: var(--color-fg);
  }

  @media (min-width: 768px) {
    .product-card__price {
      font-size: var(--text-xl);
    }
  }

  .product-card__price--muted {
    font-weight: var(--font-medium);
    color: var(--color-fg-muted);
  }

  .product-card__cta {
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    color: var(--color-accent);
  }

  .product-card__cta--muted {
    color: var(--color-fg-muted);
  }

  /* Signup Section */
  .signup-section {
    padding: var(--space-8) var(--space-4);
    padding-bottom: var(--space-16);
    background-color: var(--color-bg-elevated);
  }

  @media (min-width: 768px) {
    .signup-section {
      padding: var(--space-12) var(--space-8);
      padding-bottom: var(--space-20);
    }
  }

  .signup-wrapper {
    max-width: var(--container-sm);
    margin: 0 auto;
  }
</style>
