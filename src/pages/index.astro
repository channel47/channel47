---
/**
 * Homepage
 *
 * Soft entry point. Explains Jig, builds interest, routes people.
 * Mobile-optimized with touch-friendly targets and responsive layout.
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Button from '../components/Button.astro';
import EmailSignup from '../components/EmailSignup.astro';
---

<BaseLayout
  title="Jig — Expertise your tools can install"
  description="Packaged judgment for the tools you already use. Skill files that make Claude and Cursor actually good at their job."
>
  <Header />

  <main class="main">
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero__content">
        <h1 class="hero__title">Expertise your tools can install</h1>
        <p class="hero__description">
          Your AI tools have access to everything. APIs, data, documentation.
          What they lack is judgment—the hard-won knowledge of what to check,
          what to ignore, and what actually matters. Jig packages that expertise
          into skill files your tools can use.
        </p>
        <div class="hero__actions">
          <Button href="/setup" variant="primary" size="lg">Get started free</Button>
          <Button href="/google-ads-skills" variant="outline" size="lg">Google Ads Skills</Button>
        </div>
      </div>
    </section>

    <!-- Email Signup -->
    <section class="signup-section">
      <div class="signup-wrapper">
        <EmailSignup
          title="Get updates on new skills"
          description="We're building expertise packages for more domains. Be the first to know."
          buttonText="Notify me"
          variant="card"
        />
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  .main {
    display: flex;
    flex-direction: column;
    min-height: calc(100vh - 200px);
  }

  /* Hero Section */
  .hero {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-10) var(--space-4);
  }

  @media (min-width: 768px) {
    .hero {
      padding: var(--space-16) var(--space-4);
      padding-top: var(--space-20);
    }
  }

  .hero__content {
    max-width: var(--content-width);
    text-align: center;
  }

  .hero__title {
    font-size: var(--text-3xl);
    font-weight: var(--font-bold);
    letter-spacing: var(--tracking-tight);
    margin-bottom: var(--space-5);
    color: var(--color-fg);
    line-height: var(--leading-tight);
  }

  @media (min-width: 480px) {
    .hero__title {
      font-size: var(--text-4xl);
    }
  }

  @media (min-width: 768px) {
    .hero__title {
      font-size: var(--text-5xl);
      margin-bottom: var(--space-6);
    }
  }

  .hero__description {
    font-size: var(--text-base);
    color: var(--color-fg-secondary);
    line-height: var(--leading-relaxed);
    max-width: 55ch;
    margin: 0 auto var(--space-8);
  }

  @media (min-width: 768px) {
    .hero__description {
      font-size: var(--text-lg);
      margin-bottom: var(--space-10);
    }
  }

  .hero__actions {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    width: 100%;
    max-width: 320px;
    margin: 0 auto;
  }

  .hero__actions :global(.btn) {
    width: 100%;
  }

  @media (min-width: 480px) {
    .hero__actions {
      flex-direction: row;
      justify-content: center;
      max-width: none;
      gap: var(--space-4);
    }

    .hero__actions :global(.btn) {
      width: auto;
    }
  }

  /* Signup Section */
  .signup-section {
    padding: var(--space-8) var(--space-4);
    padding-bottom: var(--space-16);
  }

  @media (min-width: 768px) {
    .signup-section {
      padding: var(--space-12) var(--space-4);
      padding-bottom: var(--space-20);
    }
  }

  .signup-wrapper {
    max-width: var(--container-sm);
    margin: 0 auto;
  }
</style>
