---
// src/pages/index.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import EmailSignup from '../components/EmailSignup.astro';
import '../styles/components/home.css';
---
<BaseLayout title="Home">
  <section class="home-section">
    <div class="home-hero">
      <h1 class="home-hero__title">
        Claude Code tools <span class="home-hero__accent">I use.</span>
      </h1>
      <p class="home-hero__description">
        I build and test Claude Code extensions. This is where I publish the good ones. You'll find skills, plugins, and MCP servers. Some I built, some I found.
      </p>
      <div class="home-hero__actions">
        <a href="/plugins" class="button button--primary">
          Browse Tools
        </a>
        <a href="/blog" class="button button--secondary">
          Read the Blog
        </a>
      </div>
    </div>
  </section>

  <section class="section-divider">
    <div class="home-section">
      <h2 class="section-title">Latest from the blog</h2>
      <p style="color: var(--color-text-muted);">Posts coming soon...</p>
    </div>
  </section>

  <section class="section-divider">
    <div class="home-section">
      <div style="max-width: 32rem; margin: 0 auto;">
        <EmailSignup
          title="New tools in your inbox"
          description="I email when I publish something. That's about twice a month."
          source="homepage"
        />
      </div>
    </div>
  </section>
</BaseLayout>
