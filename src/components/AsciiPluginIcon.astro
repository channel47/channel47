---
// src/components/AsciiPluginIcon.astro
interface Props {
  icon: string;
  color?: string;
  size?: 'small' | 'medium' | 'large';
}

const { icon, color = 'var(--color-interactive)', size = 'medium' } = Astro.props;

const sizeClass = `ascii-plugin-icon--${size}`;
---

<pre class={`ascii-plugin-icon ${sizeClass}`} style={`color: ${color}`} aria-hidden="true">{icon}</pre>

<style>
  .ascii-plugin-icon {
    font-family: var(--font-mono);
    font-weight: var(--weight-medium);
    line-height: 1.2;
    margin: 0;
    white-space: pre;
    user-select: none;
    text-align: center;
  }

  .ascii-plugin-icon--small {
    font-size: var(--text-sm);
  }

  .ascii-plugin-icon--medium {
    font-size: var(--text-base);
  }

  .ascii-plugin-icon--large {
    font-size: var(--text-lg);
  }

  @media (min-width: 768px) {
    .ascii-plugin-icon--large {
      font-size: var(--text-xl);
    }
  }
</style>
