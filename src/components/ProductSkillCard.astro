---
/**
 * ProductSkillCard Component
 *
 * A polished, productized skill card with compact badge design.
 * Features gradient badge, animated progress bar on hover, and tier differentiation.
 */

interface Props {
  title: string;
  description: string;
  href: string;
  category: string;
  tier: 'free' | 'premium';
  price?: number;
  tags?: string[];
  featured?: boolean;
  class?: string;
}

const {
  title,
  description,
  href,
  category,
  tier,
  price,
  tags = [],
  featured = false,
  class: className,
} = Astro.props;

const categoryLabels: Record<string, string> = {
  'google-ads': 'Google Ads',
  'analytics': 'Analytics',
  'automation': 'Automation',
  'reporting': 'Reporting',
  'optimization': 'Optimization',
  'other': 'Other',
};

const priceDisplay = tier === 'free' ? 'Free' : `$${price}`;
const ctaText = tier === 'free' ? 'Get skill' : 'View details';
---

<a
  href={href}
  class:list={[
    'product-skill-card',
    `product-skill-card--${tier}`,
    { 'product-skill-card--featured': featured },
    className,
  ]}
  data-tier={tier}
>
  <div class="product-skill-card__badge">
    <span>{priceDisplay}</span>
  </div>

  <div class="product-skill-card__content">
    <span class="product-skill-card__category">
      {categoryLabels[category] || category}
    </span>
    <h3 class="product-skill-card__title">{title}</h3>
    <p class="product-skill-card__description">{description}</p>

    {tags.length > 0 && (
      <div class="product-skill-card__tags">
        {tags.slice(0, 3).map((tag) => (
          <span class="product-skill-card__tag">{tag}</span>
        ))}
      </div>
    )}
  </div>

  <div class="product-skill-card__footer">
    <span class="product-skill-card__cta">{ctaText} &rarr;</span>
  </div>

  <div class="product-skill-card__bar" />
</a>

<style>
  .product-skill-card {
    position: relative;
    display: flex;
    flex-direction: column;
    background: var(--color-surface);
    border: 1px solid var(--color-border-subtle);
    border-radius: var(--radius-xl);
    overflow: hidden;
    text-decoration: none;
    -webkit-tap-highlight-color: transparent;
    transition:
      transform var(--duration-fast) var(--ease-out),
      border-color var(--duration-fast) var(--ease-out),
      box-shadow var(--duration-fast) var(--ease-out);
    cursor: pointer;
  }

  .product-skill-card:hover {
    border-color: var(--color-border);
    transform: translateY(-3px);
    box-shadow:
      0 4px 12px oklch(0% 0 0 / 0.12),
      0 8px 24px oklch(0% 0 0 / 0.08);
  }

  .product-skill-card:active {
    transform: scale(0.98);
  }

  .product-skill-card:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
  }

  /* Featured variant */
  .product-skill-card--featured {
    border-color: var(--color-accent);
  }

  .product-skill-card--featured:hover {
    border-color: var(--color-accent-hover);
  }

  /* Badge */
  .product-skill-card__badge {
    position: absolute;
    top: 0;
    right: 0;
    padding: var(--space-2) var(--space-5);
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    font-weight: var(--font-bold);
    border-bottom-left-radius: var(--radius-xl);
    transition: transform var(--duration-fast) var(--ease-out);
    z-index: 1;
  }

  .product-skill-card:hover .product-skill-card__badge {
    transform: scale(1.02);
  }

  .product-skill-card--premium .product-skill-card__badge {
    background: linear-gradient(
      135deg,
      var(--color-accent) 0%,
      oklch(65% 0.18 35) 100%
    );
    color: var(--color-bg);
    box-shadow:
      0 2px 8px oklch(70% 0.15 30 / 0.25),
      inset 0 1px 0 oklch(100% 0 0 / 0.15);
  }

  .product-skill-card--free .product-skill-card__badge {
    background: linear-gradient(
      135deg,
      var(--color-success) 0%,
      oklch(60% 0.18 155) 100%
    );
    color: var(--color-bg);
    box-shadow:
      0 2px 8px oklch(70% 0.15 145 / 0.25),
      inset 0 1px 0 oklch(100% 0 0 / 0.15);
  }

  /* Content */
  .product-skill-card__content {
    padding: var(--space-5);
    padding-right: calc(var(--space-5) + 70px);
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  @media (min-width: 640px) {
    .product-skill-card__content {
      padding: var(--space-6);
      padding-right: calc(var(--space-6) + 70px);
    }
  }

  .product-skill-card__category {
    display: inline-block;
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    margin-bottom: var(--space-2);
  }

  .product-skill-card__title {
    font-family: var(--font-display);
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    color: var(--color-text-primary);
    margin-bottom: var(--space-2);
    line-height: var(--leading-snug);
    transition: color var(--duration-fast);
  }

  @media (min-width: 640px) {
    .product-skill-card__title {
      font-size: var(--text-xl);
      margin-bottom: var(--space-3);
    }
  }

  .product-skill-card:hover .product-skill-card__title {
    color: var(--color-fg);
  }

  .product-skill-card__description {
    font-family: var(--font-body);
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    line-height: var(--leading-relaxed);
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    flex: 1;
  }

  @media (min-width: 640px) {
    .product-skill-card__description {
      font-size: var(--text-base);
    }
  }

  /* Tags */
  .product-skill-card__tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    margin-top: var(--space-3);
  }

  .product-skill-card__tag {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    padding: var(--space-1) var(--space-2);
    background: var(--color-bg);
    border-radius: var(--radius-sm);
    transition: color var(--duration-fast);
  }

  .product-skill-card:hover .product-skill-card__tag {
    color: var(--color-text-secondary);
  }

  /* Footer */
  .product-skill-card__footer {
    padding: var(--space-4) var(--space-5);
    border-top: 1px solid var(--color-border-subtle);
  }

  @media (min-width: 640px) {
    .product-skill-card__footer {
      padding: var(--space-4) var(--space-6);
    }
  }

  .product-skill-card__cta {
    font-family: var(--font-display);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    color: var(--color-accent);
    transition: color var(--duration-fast);
  }

  .product-skill-card--free .product-skill-card__cta {
    color: var(--color-success);
  }

  .product-skill-card:hover .product-skill-card__cta {
    color: var(--color-accent-hover);
  }

  .product-skill-card--free:hover .product-skill-card__cta {
    color: oklch(75% 0.18 145);
  }

  /* Progress Bar */
  .product-skill-card__bar {
    height: 3px;
    transform: scaleX(0);
    transform-origin: left;
    transition: transform var(--duration-normal) cubic-bezier(0.22, 1, 0.36, 1);
  }

  .product-skill-card--premium .product-skill-card__bar {
    background: linear-gradient(
      90deg,
      var(--color-accent) 0%,
      oklch(75% 0.12 50) 100%
    );
  }

  .product-skill-card--free .product-skill-card__bar {
    background: linear-gradient(
      90deg,
      var(--color-success) 0%,
      oklch(75% 0.1 130) 100%
    );
  }

  .product-skill-card:hover .product-skill-card__bar {
    transform: scaleX(1);
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .product-skill-card {
      transition: none;
    }

    .product-skill-card:hover {
      transform: none;
    }

    .product-skill-card:active {
      transform: none;
    }

    .product-skill-card__bar {
      transition: none;
    }

    .product-skill-card:hover .product-skill-card__bar {
      transform: scaleX(1);
    }
  }
</style>
