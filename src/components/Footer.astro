---
/**
 * Footer Component
 *
 * Minimal site footer with consistent branding and email capture.
 */

interface Props {
  class?: string;
}

const { class: className } = Astro.props;
const currentYear = new Date().getFullYear();

// TODO: Replace with actual Beehiiv embed URL
const BEEHIIV_EMBED_URL = 'https://embeds.beehiiv.com/YOUR_EMBED_ID';
---

<footer class={`footer ${className || ''}`.trim()}>
  <div class="footer__container">
    <div class="footer__content">
      <p class="footer__brand">JIG</p>
      <p class="footer__tagline">Expertise your tools can install.</p>
    </div>

    <nav class="footer__nav">
      <a href="/skills" class="footer__link">Skills</a>
      <a href="/tools" class="footer__link">Tools</a>
      <a href="/blog" class="footer__link">Blog</a>
      <a href="/contribute" class="footer__link">Contribute</a>
      <a href="mailto:support@jig.tools" class="footer__link">Contact</a>
    </nav>

    <div class="footer__signup">
      <p class="footer__signup-label">Stay in the loop</p>
      <form class="footer__signup-form" action={BEEHIIV_EMBED_URL} method="POST">
        <input type="hidden" name="tag" value="footer-capture" />
        <input
          type="email"
          name="email"
          placeholder="you@example.com"
          required
          class="footer__signup-input"
        />
        <button type="submit" class="footer__signup-button">Subscribe</button>
      </form>
    </div>

    <p class="footer__copyright">
      &copy; {currentYear} Jig
    </p>
  </div>
</footer>

<style>
  .footer {
    border-top: 1px solid var(--color-border-subtle);
    padding: var(--space-10) var(--space-4);
    margin-top: auto;
  }

  @media (min-width: 768px) {
    .footer {
      padding: var(--space-12) var(--space-8);
    }
  }

  .footer__container {
    display: flex;
    flex-direction: column;
    gap: var(--space-8);
    max-width: var(--container-lg);
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .footer__container {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      gap: var(--space-6);
    }
  }

  .footer__content {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .footer__brand {
    font-family: var(--font-sans);
    font-weight: var(--font-bold);
    font-size: var(--text-lg);
    color: var(--color-fg);
    letter-spacing: 0.1em;
    margin: 0;
  }

  .footer__tagline {
    font-size: var(--text-sm);
    color: var(--color-fg-muted);
    margin: 0;
  }

  .footer__nav {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-1);
    margin: calc(-1 * var(--space-2));
  }

  .footer__link {
    font-family: var(--font-sans);
    font-size: var(--text-sm);
    color: var(--color-fg-secondary);
    text-decoration: none;
    padding: var(--space-2) var(--space-3);
    border-radius: var(--radius-md);
    min-height: 44px;
    display: inline-flex;
    align-items: center;
    -webkit-tap-highlight-color: transparent;
    transition: color var(--duration-fast) var(--ease-out);
  }

  .footer__link:hover {
    color: var(--color-fg);
  }

  @media (min-width: 768px) {
    .footer__link {
      min-height: auto;
    }
  }

  .footer__copyright {
    font-size: var(--text-xs);
    color: var(--color-fg-muted);
    margin: 0;
  }

  @media (min-width: 768px) {
    .footer__copyright {
      order: -1;
    }
  }

  /* Footer Email Signup */
  .footer__signup {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .footer__signup-label {
    font-size: var(--text-sm);
    color: var(--color-fg-secondary);
    margin: 0;
  }

  .footer__signup-form {
    display: flex;
    gap: var(--space-2);
  }

  .footer__signup-input {
    flex: 1;
    min-width: 0;
    padding: var(--space-2) var(--space-3);
    font-family: var(--font-sans);
    font-size: var(--text-sm);
    color: var(--color-fg);
    background-color: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    outline: none;
    min-height: 40px;
    transition: border-color var(--duration-fast) var(--ease-out);
  }

  .footer__signup-input::placeholder {
    color: var(--color-fg-muted);
  }

  .footer__signup-input:focus {
    border-color: var(--color-accent);
  }

  .footer__signup-button {
    padding: var(--space-2) var(--space-4);
    font-family: var(--font-sans);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    color: var(--color-fg-inverse);
    background-color: var(--color-accent);
    border: none;
    border-radius: var(--radius-md);
    cursor: pointer;
    white-space: nowrap;
    min-height: 40px;
    transition: background-color var(--duration-fast) var(--ease-out);
  }

  .footer__signup-button:hover {
    background-color: var(--color-accent-hover);
  }

  @media (min-width: 768px) {
    .footer__signup {
      max-width: 280px;
    }
  }
</style>
