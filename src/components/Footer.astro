---
/**
 * Footer Component
 *
 * Minimal site footer.
 */

interface Props {
  class?: string;
}

const { class: className } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer class={`footer ${className || ''}`.trim()}>
  <div class="footer__container">
    <div class="footer__content">
      <p class="footer__brand">Jig</p>
      <p class="footer__tagline">Expertise your tools can install</p>
    </div>
    <div class="footer__meta">
      <nav class="footer__nav">
        <a href="/setup" class="footer__link">Setup</a>
        <a href="/google-ads-skills" class="footer__link">Google Ads Skills</a>
        <a href="mailto:support@jig.tools" class="footer__link">Contact</a>
      </nav>
      <p class="footer__copyright">
        &copy; {currentYear} Jig. All rights reserved.
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    border-top: 1px solid var(--color-border-subtle);
    padding: var(--space-10) var(--space-4);
    margin-top: auto;
  }

  .footer__container {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
    max-width: var(--container-lg);
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .footer__container {
      flex-direction: row;
      justify-content: space-between;
      align-items: flex-start;
    }
  }

  .footer__brand {
    font-family: var(--font-sans);
    font-weight: var(--font-bold);
    font-size: var(--text-lg);
    color: var(--color-fg);
    margin-bottom: var(--space-1);
  }

  .footer__tagline {
    font-size: var(--text-sm);
    color: var(--color-fg-muted);
    margin: 0;
  }

  .footer__meta {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  @media (min-width: 768px) {
    .footer__meta {
      align-items: flex-end;
      text-align: right;
    }
  }

  .footer__nav {
    display: flex;
    gap: var(--space-4);
    flex-wrap: wrap;
  }

  .footer__link {
    font-family: var(--font-sans);
    font-size: var(--text-sm);
    color: var(--color-fg-secondary);
    text-decoration: none;
    transition: color var(--duration-fast) var(--ease-out);
  }

  .footer__link:hover {
    color: var(--color-accent);
  }

  .footer__copyright {
    font-size: var(--text-xs);
    color: var(--color-fg-muted);
    margin: 0;
  }
</style>
