---
/**
 * ToolCard Component
 *
 * A practical, utility-focused card for displaying tools.
 * Design philosophy: Clean, functional, uncluttered.
 * Prioritizes clarity and ease of scanning over decoration.
 */

interface Props {
  name: string;
  description: string;
  href?: string;
  icon?: 'ads' | 'creative' | 'analytics' | 'automation';
  available?: boolean;
  badge?: string;
  class?: string;
}

const {
  name,
  description,
  href,
  icon,
  available = true,
  badge = 'Free',
  class: className,
} = Astro.props;

const Tag = available && href ? 'a' : 'div';
const linkProps = available && href ? { href } : {};
---

<Tag
  class:list={[
    'tool-card',
    { 'tool-card--disabled': !available },
    className,
  ]}
  {...linkProps}
  aria-disabled={!available ? 'true' : undefined}
>
  {icon && (
    <div class="tool-card__icon">
      {icon === 'ads' && (
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <path d="M12 20V10" />
          <path d="M18 20V4" />
          <path d="M6 20v-4" />
        </svg>
      )}
      {icon === 'creative' && (
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
          <circle cx="8.5" cy="8.5" r="1.5" />
          <polyline points="21 15 16 10 5 21" />
        </svg>
      )}
      {icon === 'analytics' && (
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <path d="M3 3v18h18" />
          <path d="M18 17V9" />
          <path d="M13 17V5" />
          <path d="M8 17v-3" />
        </svg>
      )}
      {icon === 'automation' && (
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <path d="M12 2v4" />
          <path d="M12 18v4" />
          <path d="M4.93 4.93l2.83 2.83" />
          <path d="M16.24 16.24l2.83 2.83" />
          <path d="M2 12h4" />
          <path d="M18 12h4" />
          <path d="M4.93 19.07l2.83-2.83" />
          <path d="M16.24 7.76l2.83-2.83" />
        </svg>
      )}
    </div>
  )}

  <div class="tool-card__body">
    <h3 class="tool-card__name">{name}</h3>
    <p class="tool-card__description">{description}</p>
  </div>

  <div class="tool-card__footer">
    {badge && (
      <span class="tool-card__badge">{badge}</span>
    )}
    <span class="tool-card__action">
      {available ? 'Setup guide' : 'Coming soon'}
      {available && <span class="tool-card__arrow" aria-hidden="true">â†’</span>}
    </span>
  </div>
</Tag>

<style>
  .tool-card {
    display: flex;
    flex-direction: column;
    padding: var(--card-padding);
    background: var(--card-utility-bg);
    border: 1px solid var(--card-utility-border);
    border-radius: var(--card-radius);
    text-decoration: none;
    color: inherit;
    -webkit-tap-highlight-color: transparent;
    transition: var(--card-transition);
  }

  @media (min-width: 640px) {
    .tool-card {
      padding: var(--card-padding-lg);
    }
  }

  /* Interactive state - only for enabled cards */
  .tool-card:not(.tool-card--disabled) {
    cursor: pointer;
  }

  .tool-card:not(.tool-card--disabled):hover {
    border-color: var(--card-utility-hover-border);
    transform: translateY(var(--card-hover-lift));
  }

  .tool-card:not(.tool-card--disabled):active {
    transform: scale(var(--card-press-scale));
  }

  .tool-card:not(.tool-card--disabled):focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
  }

  /* Disabled state */
  .tool-card--disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  /* Icon */
  .tool-card__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: var(--color-bg);
    border: 1px solid var(--color-border-subtle);
    border-radius: var(--radius-lg);
    color: var(--color-fg-muted);
    margin-bottom: var(--space-4);
    flex-shrink: 0;
    transition: color var(--duration-fast) var(--ease-out),
      border-color var(--duration-fast) var(--ease-out);
  }

  .tool-card:not(.tool-card--disabled):hover .tool-card__icon {
    color: var(--color-fg-secondary);
    border-color: var(--color-border);
  }

  /* Body */
  .tool-card__body {
    flex: 1;
    min-height: 0;
  }

  .tool-card__name {
    font-family: var(--font-display);
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    color: var(--color-fg);
    margin: 0 0 var(--space-2) 0;
    line-height: var(--leading-tight);
  }

  @media (min-width: 640px) {
    .tool-card__name {
      font-size: var(--text-xl);
    }
  }

  .tool-card__description {
    font-family: var(--font-body);
    font-size: var(--text-sm);
    color: var(--color-fg-secondary);
    line-height: var(--leading-relaxed);
    margin: 0;
  }

  /* Footer */
  .tool-card__footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-3);
    padding-top: var(--space-4);
    margin-top: var(--space-4);
    border-top: 1px solid var(--color-border-subtle);
  }

  .tool-card__badge {
    display: inline-flex;
    align-items: center;
    padding: var(--space-1) var(--space-2);
    font-family: var(--font-sans);
    font-size: var(--text-xs);
    font-weight: var(--font-medium);
    color: var(--color-success);
    background: oklch(from var(--color-success) l c h / 0.1);
    border-radius: var(--radius-md);
    letter-spacing: var(--tracking-wide);
    text-transform: uppercase;
  }

  .tool-card__action {
    display: flex;
    align-items: center;
    gap: var(--space-1);
    font-family: var(--font-sans);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    color: var(--color-fg-muted);
    transition: color var(--duration-fast) var(--ease-out);
  }

  .tool-card:not(.tool-card--disabled):hover .tool-card__action {
    color: var(--color-fg-secondary);
  }

  .tool-card__arrow {
    transition: transform var(--duration-fast) var(--ease-out);
  }

  .tool-card:not(.tool-card--disabled):hover .tool-card__arrow {
    transform: translateX(2px);
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .tool-card {
      transition: none;
    }

    .tool-card:not(.tool-card--disabled):hover,
    .tool-card:not(.tool-card--disabled):active {
      transform: none;
    }

    .tool-card__arrow {
      transition: none;
    }

    .tool-card:not(.tool-card--disabled):hover .tool-card__arrow {
      transform: none;
    }
  }
</style>
