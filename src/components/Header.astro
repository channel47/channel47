---
/**
 * Header Component
 *
 * Minimal site header with responsive mobile navigation.
 */

interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<header class={`header ${className || ''}`.trim()}>
  <div class="header__container">
    <a href="/" class="header__logo">
      <span class="header__logo-text">Jig</span>
    </a>

    <!-- Mobile menu button -->
    <button
      class="header__menu-btn"
      aria-label="Toggle menu"
      aria-expanded="false"
      aria-controls="header-nav"
    >
      <span class="header__menu-icon"></span>
    </button>

    <!-- Mobile backdrop -->
    <div class="header__backdrop" aria-hidden="true"></div>

    <!-- Navigation -->
    <nav class="header__nav" id="header-nav">
      <slot name="nav">
        <a href="/setup" class="header__link">Setup</a>
        <a href="/google-ads-skills" class="header__link header__link--cta">Google Ads Skills</a>
      </slot>
    </nav>
  </div>
</header>

<script>
  // Mobile menu toggle with scroll lock
  const menuBtn = document.querySelector('.header__menu-btn');
  const nav = document.querySelector('.header__nav');
  const header = document.querySelector('.header');
  const backdrop = document.querySelector('.header__backdrop');

  function openMenu() {
    menuBtn?.setAttribute('aria-expanded', 'true');
    nav?.classList.add('header__nav--open');
    header?.classList.add('header--menu-open');
    document.body.style.overflow = 'hidden';
  }

  function closeMenu() {
    menuBtn?.setAttribute('aria-expanded', 'false');
    nav?.classList.remove('header__nav--open');
    header?.classList.remove('header--menu-open');
    document.body.style.overflow = '';
  }

  if (menuBtn && nav && header) {
    menuBtn.addEventListener('click', () => {
      const isExpanded = menuBtn.getAttribute('aria-expanded') === 'true';
      if (isExpanded) {
        closeMenu();
      } else {
        openMenu();
      }
    });

    // Close menu when clicking backdrop
    backdrop?.addEventListener('click', closeMenu);

    // Close menu when clicking a link
    nav.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', closeMenu);
    });

    // Close menu on escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && nav.classList.contains('header__nav--open')) {
        closeMenu();
        menuBtn.focus();
      }
    });

    // Handle resize - close menu if window becomes desktop size
    const mediaQuery = window.matchMedia('(min-width: 640px)');
    mediaQuery.addEventListener('change', (e) => {
      if (e.matches && nav.classList.contains('header__nav--open')) {
        closeMenu();
      }
    });
  }
</script>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: var(--z-header);
    background-color: oklch(15% 0.01 60 / 0.95);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--color-border-subtle);
    transition: background-color var(--duration-fast) var(--ease-out);
  }

  .header--menu-open {
    background-color: var(--color-bg);
  }

  .header__container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: var(--container-lg);
    margin: 0 auto;
    padding: var(--space-4);
    min-height: 64px;
  }

  .header__logo {
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: var(--space-2);
    /* Ensure minimum touch target */
    min-height: 48px;
    padding: var(--space-2) var(--space-1);
    margin-left: calc(-1 * var(--space-1));
    border-radius: var(--radius-md);
    transition: opacity var(--duration-fast) var(--ease-out);
    -webkit-tap-highlight-color: transparent;
  }

  .header__logo:active {
    opacity: 0.7;
  }

  .header__logo-text {
    font-family: var(--font-sans);
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    color: var(--color-fg);
    letter-spacing: var(--tracking-tight);
    transition: color var(--duration-fast) var(--ease-out);
  }

  .header__logo:hover .header__logo-text {
    color: var(--color-accent);
  }

  /* Mobile menu button */
  .header__menu-btn {
    position: relative;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    margin-right: calc(-1 * var(--space-2));
    border-radius: var(--radius-md);
    -webkit-tap-highlight-color: transparent;
    transition: background-color var(--duration-fast) var(--ease-out);
  }

  .header__menu-btn:hover {
    background-color: var(--color-bg-hover);
  }

  .header__menu-btn:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
  }

  .header__menu-icon {
    position: relative;
    width: 22px;
    height: 2px;
    background-color: var(--color-fg);
    border-radius: 1px;
    transition: background-color var(--duration-fast) var(--ease-out);
  }

  .header__menu-icon::before,
  .header__menu-icon::after {
    content: '';
    position: absolute;
    left: 0;
    width: 22px;
    height: 2px;
    background-color: var(--color-fg);
    border-radius: 1px;
    transition: transform var(--duration-normal) var(--ease-out);
  }

  .header__menu-icon::before {
    top: -7px;
  }

  .header__menu-icon::after {
    top: 7px;
  }

  /* Animate to X when open */
  .header__menu-btn[aria-expanded="true"] .header__menu-icon {
    background-color: transparent;
  }

  .header__menu-btn[aria-expanded="true"] .header__menu-icon::before {
    transform: translateY(7px) rotate(45deg);
  }

  .header__menu-btn[aria-expanded="true"] .header__menu-icon::after {
    transform: translateY(-7px) rotate(-45deg);
  }

  /* Mobile backdrop */
  .header__backdrop {
    position: fixed;
    inset: 0;
    top: 64px;
    background-color: oklch(0% 0 0 / 0.7);
    opacity: 0;
    visibility: hidden;
    transition:
      opacity var(--duration-normal) var(--ease-out),
      visibility var(--duration-normal) var(--ease-out);
    z-index: var(--z-modal-backdrop);
    -webkit-tap-highlight-color: transparent;
  }

  .header--menu-open .header__backdrop {
    opacity: 1;
    visibility: visible;
  }

  /* Navigation - Mobile first */
  .header__nav {
    position: fixed;
    top: 64px;
    right: 0;
    bottom: 0;
    width: min(300px, 85vw);
    background-color: oklch(18% 0.01 60);
    border-left: 1px solid var(--color-border);
    box-shadow: -8px 0 32px oklch(0% 0 0 / 0.4);
    display: flex;
    flex-direction: column;
    padding: var(--space-6) var(--space-4);
    gap: var(--space-1);
    transform: translateX(100%);
    transition: transform var(--duration-normal) var(--ease-out);
    visibility: hidden;
    z-index: var(--z-modal);
    overflow-y: auto;
    overscroll-behavior: contain;
  }

  .header__nav--open {
    transform: translateX(0);
    visibility: visible;
  }

  .header__link {
    font-family: var(--font-sans);
    font-size: var(--text-base);
    font-weight: var(--font-medium);
    color: var(--color-fg-secondary);
    text-decoration: none;
    padding: var(--space-4);
    min-height: 56px;
    display: flex;
    align-items: center;
    border-radius: var(--radius-lg);
    -webkit-tap-highlight-color: transparent;
    transition:
      color var(--duration-fast) var(--ease-out),
      background-color var(--duration-fast) var(--ease-out),
      transform var(--duration-fast) var(--ease-out);
  }

  .header__link:hover {
    color: var(--color-fg);
    background-color: var(--color-bg-hover);
  }

  .header__link:active {
    transform: scale(0.98);
    background-color: var(--color-bg-hover);
  }

  .header__link[aria-current='page'] {
    color: var(--color-fg);
    background-color: var(--color-bg-elevated);
  }

  .header__link--cta {
    color: var(--color-accent);
    font-weight: var(--font-semibold);
  }

  .header__link--cta:hover {
    color: var(--color-accent-hover);
    background-color: var(--color-accent-subtle);
  }

  .header__link--cta:active {
    background-color: var(--color-accent-subtle);
  }

  /* Desktop styles */
  @media (min-width: 640px) {
    .header__menu-btn {
      display: none;
    }

    .header__backdrop {
      display: none;
    }

    .header__nav {
      position: static;
      width: auto;
      background: none;
      border-left: none;
      flex-direction: row;
      padding: 0;
      gap: var(--space-1);
      transform: none;
      visibility: visible;
      align-items: center;
      overflow: visible;
    }

    .header__link {
      font-size: var(--text-sm);
      padding: var(--space-2) var(--space-3);
      min-height: 40px;
    }

    .header__link:hover {
      background-color: var(--color-bg-hover);
    }

    .header__link:active {
      transform: none;
    }

    .header__link[aria-current='page'] {
      background-color: transparent;
    }

    .header__link--cta:hover {
      background-color: var(--color-accent-subtle);
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .header__nav,
    .header__backdrop,
    .header__menu-icon,
    .header__menu-icon::before,
    .header__menu-icon::after {
      transition: none;
    }
  }
</style>
