---
/**
 * Card Component
 *
 * A flexible base card for general content display.
 * Design philosophy: Clean, versatile, consistent.
 * Provides a solid foundation that works across contexts.
 */

interface Props {
  href?: string;
  class?: string;
  variant?: 'default' | 'elevated' | 'ghost';
}

const { href, class: className, variant = 'default' } = Astro.props;

const Tag = href ? 'a' : 'div';
---

<Tag
  class:list={[
    'card',
    `card--${variant}`,
    { 'card--interactive': !!href },
    className,
  ]}
  href={href}
>
  <slot />
</Tag>

<style>
  .card {
    display: block;
    padding: var(--card-padding);
    border-radius: var(--card-radius);
    -webkit-tap-highlight-color: transparent;
    transition: var(--card-transition);
  }

  @media (min-width: 640px) {
    .card {
      padding: var(--card-padding-lg);
    }
  }

  /* Variants */
  .card--default {
    background: var(--card-bg);
    border: var(--card-border);
  }

  .card--elevated {
    background: var(--card-bg);
    border: 1px solid var(--color-border);
    box-shadow: var(--shadow-sm);
  }

  .card--ghost {
    background: transparent;
    border: 1px solid var(--color-border-subtle);
  }

  /* Interactive state */
  .card--interactive {
    text-decoration: none;
    color: inherit;
    cursor: pointer;
  }

  .card--interactive:hover {
    transform: translateY(var(--card-hover-lift));
    border-color: var(--color-accent);
  }

  .card--interactive.card--default:hover,
  .card--interactive.card--elevated:hover {
    box-shadow: var(--glow-sm);
  }

  .card--interactive:active {
    transform: scale(var(--card-press-scale));
  }

  .card--interactive:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
  }

  /* Slot content styling via global selectors */
  .card :global(.card__title) {
    font-family: var(--font-display);
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    color: var(--color-fg);
    margin: 0 0 var(--space-2) 0;
    line-height: var(--leading-tight);
  }

  @media (min-width: 640px) {
    .card :global(.card__title) {
      font-size: var(--text-xl);
    }
  }

  .card :global(.card__description) {
    font-family: var(--font-body);
    font-size: var(--text-sm);
    color: var(--color-fg-secondary);
    line-height: var(--leading-relaxed);
    margin: 0;
  }

  .card :global(.card__meta) {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--color-fg-muted);
    margin-top: var(--space-4);
    letter-spacing: var(--tracking-wide);
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .card {
      transition: none;
    }

    .card--interactive:hover,
    .card--interactive:active {
      transform: none;
    }
  }
</style>
