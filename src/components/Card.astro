---
/**
 * Card Component
 *
 * A flexible card component for displaying content blocks.
 */

interface Props {
  href?: string;
  class?: string;
  variant?: 'default' | 'elevated' | 'bordered';
}

const { href, class: className, variant = 'default' } = Astro.props;

const Tag = href ? 'a' : 'div';
const classes = `card card--${variant} ${href ? 'card--link' : ''} ${className || ''}`.trim();
---

<Tag class={classes} href={href}>
  <slot />
</Tag>

<style>
  .card {
    display: block;
    padding: var(--space-5);
    border-radius: var(--radius-xl);
    -webkit-tap-highlight-color: transparent;
    transition:
      transform var(--duration-fast) var(--ease-out),
      box-shadow var(--duration-fast) var(--ease-out),
      border-color var(--duration-fast) var(--ease-out);
  }

  @media (min-width: 640px) {
    .card {
      padding: var(--space-6);
    }
  }

  .card--default {
    background-color: var(--color-surface);
    border: 1px solid var(--color-border-subtle);
  }

  .card--elevated {
    background-color: var(--color-surface-elevated);
    border: 1px solid var(--color-border);
    box-shadow: var(--shadow-md);
  }

  .card--bordered {
    background-color: transparent;
    border: 1px solid var(--color-border);
  }

  .card--link {
    text-decoration: none;
    cursor: pointer;
  }

  .card--link:hover {
    transform: translateY(-2px);
    border-color: var(--color-accent);
    box-shadow: var(--glow-sm);
  }

  .card--link:active {
    transform: scale(0.98);
  }

  .card--link:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
  }

  .card :global(.card__title) {
    font-family: var(--font-display);
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    color: var(--color-text-primary);
    margin-bottom: var(--space-2);
    line-height: var(--leading-tight);
  }

  @media (min-width: 640px) {
    .card :global(.card__title) {
      font-size: var(--text-xl);
    }
  }

  .card :global(.card__description) {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    margin-bottom: 0;
    line-height: var(--leading-relaxed);
  }

  .card :global(.card__meta) {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    font-family: var(--font-mono);
    margin-top: var(--space-4);
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .card {
      transition: none;
    }

    .card--link:hover {
      transform: none;
    }

    .card--link:active {
      transform: none;
    }
  }
</style>
