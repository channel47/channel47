---
import EmailSignup from './EmailSignup.astro';
---

<dialog id="subscribe-modal" class="subscribe-modal">
  <div class="subscribe-modal__content">
    <button class="subscribe-modal__close" id="close-subscribe-modal" aria-label="Close modal">
      <span class="close-icon">[x]</span>
    </button>
    <div class="subscribe-modal__body">
      <EmailSignup 
        title="Stay Tuned" 
        description="Join the signal. No noise, just updates." 
        source="popup" 
      />
    </div>
  </div>
</dialog>

<style>
  .subscribe-modal {
    padding: 0;
    background: transparent;
    border: none;
    max-width: 460px;
    width: 90%;
    margin: auto;
    color: var(--color-text);
  }

  .subscribe-modal[open] {
    animation: modal-enter 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .subscribe-modal::backdrop {
    background: rgba(10, 14, 20, 0.6);
    backdrop-filter: blur(8px);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .subscribe-modal[open]::backdrop {
    opacity: 1;
  }

  .subscribe-modal__content {
    background-color: var(--color-terminal-black);
    border: 1px solid var(--color-border);
    /* Subtle depth instead of glow */
    box-shadow: 
      0 0 0 1px rgba(255, 255, 255, 0.05),
      0 20px 50px -10px rgba(0, 0, 0, 0.8);
    padding: var(--space-xl) var(--space-lg);
    position: relative;
    border-radius: var(--border-radius-beveled);
  }

  .subscribe-modal__close {
    position: absolute;
    top: var(--space-sm);
    right: var(--space-sm);
    background: transparent;
    border: none;
    color: var(--color-text-muted);
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    cursor: pointer;
    line-height: 1;
    padding: var(--space-xs);
    transition: color var(--transition-fast);
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .subscribe-modal__close:hover {
    color: var(--color-interactive);
  }

  @keyframes modal-enter {
    from {
      opacity: 0;
      transform: translateY(20px) scale(0.98);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  /* Override EmailSignup styles for the modal context */
  :global(.subscribe-modal .email-signup) {
    text-align: center;
  }
  
  :global(.subscribe-modal .email-signup__title) {
    color: var(--color-text-primary);
    font-weight: var(--weight-medium);
    font-size: var(--text-lg);
    letter-spacing: -0.02em;
    margin-bottom: var(--space-2);
  }

  :global(.subscribe-modal .email-signup__description) {
    font-size: var(--text-sm);
    margin-bottom: var(--space-lg);
    opacity: 0.8;
  }

  /* Refine Button for subtlety */
  :global(.subscribe-modal .email-signup__button) {
    background-color: transparent;
    border: 1px solid var(--color-border);
    color: var(--color-text-primary);
    font-weight: var(--weight-medium);
  }
  
  :global(.subscribe-modal .email-signup__button::before) {
    content: "> "; /* Terminal prefix instead of arrow */
    color: var(--color-muted-gray);
  }

  :global(.subscribe-modal .email-signup__button:hover) {
    border-color: var(--color-interactive);
    color: var(--color-interactive);
    box-shadow: none;
    transform: translateY(-1px);
  }

  :global(.subscribe-modal .email-signup__button:hover::before) {
    color: var(--color-interactive);
  }

  /* Refine Input for subtlety */
  :global(.subscribe-modal .email-signup__input) {
    border-color: var(--color-border);
    background: rgba(255, 255, 255, 0.02);
  }

  :global(.subscribe-modal .email-signup__input:focus) {
    border-color: var(--color-interactive);
    box-shadow: 0 0 0 1px var(--color-interactive);
  }
</style>

<script>
  const modal = document.getElementById('subscribe-modal') as HTMLDialogElement;
  const closeBtn = document.getElementById('close-subscribe-modal');

  if (modal && closeBtn) {
    closeBtn.addEventListener('click', () => {
      modal.close();
    });

    // Close on click outside
    modal.addEventListener('click', (e) => {
      const dialogDimensions = modal.getBoundingClientRect();
      if (
        e.clientX < dialogDimensions.left ||
        e.clientX > dialogDimensions.right ||
        e.clientY < dialogDimensions.top ||
        e.clientY > dialogDimensions.bottom
      ) {
        modal.close();
      }
    });
  }
  
  // Expose open function globally or listen for event
  document.addEventListener('open-subscribe-modal', () => {
    modal?.showModal();
  });
</script>

