---
// src/components/home/PluginShowcase.astro
import ScrollReveal from '../shared/ScrollReveal.astro';
import { readFileSync } from 'fs';
import { fileURLToPath } from 'url';
import { dirname, join } from 'path';

const __filename = fileURLToPath(import.meta.url);
const __dirname = dirname(__filename);

// Read ASCII art files
const asciiDir = join(process.cwd(), 'src/ascii-assets/plugins');
const asciiArt = readFileSync(join(asciiDir, 'ascii-art.txt'), 'utf-8');
const prompt = readFileSync(join(asciiDir, 'prompt.txt'), 'utf-8');
const creative = readFileSync(join(asciiDir, 'creative.txt'), 'utf-8');
const googleAds = readFileSync(join(asciiDir, 'google-ads.txt'), 'utf-8');

interface Plugin {
  ascii: string;
  name: string;
  description: string;
  url: string;
  color: string;
  command: string;
}

const plugins: Plugin[] = [
  {
    ascii: asciiArt,
    name: 'ASCII Art',
    description: 'Turn text into terminal art.',
    url: '/plugins/ascii-art',
    color: 'primary',
    command: 'ascii-art --render'
  },
  {
    ascii: prompt,
    name: 'Prompt Enhancer',
    description: "Craft better prompts. Anthropic's playbook.",
    url: '/plugins/prompt-enhancer',
    color: 'secondary',
    command: 'enhance --prompt'
  },
  {
    ascii: creative,
    name: 'Creative Writing',
    description: 'Editorial polish. Without pretense.',
    url: '/plugins/creative-writing',
    color: 'gold',
    command: 'write --creative'
  },
  {
    ascii: googleAds,
    name: 'Google Ads',
    description: 'GAQL queries. No docs needed.',
    url: '/plugins/google-ads',
    color: 'primary',
    command: 'ads --query'
  }
];
---

<section class="plugin-showcase">
  <div class="plugin-showcase__header">
    <ScrollReveal direction="up">
      <h2 class="plugin-showcase__title">The Arsenal</h2>
    </ScrollReveal>
    <ScrollReveal direction="up" delay={1}>
      <p class="plugin-showcase__subtitle">Tools for the gaps.</p>
    </ScrollReveal>
  </div>

  <div class="plugin-showcase__grid">
    {plugins.map((plugin, index) => (
      <ScrollReveal direction="up" delay={index + 1}>
        <a href={plugin.url} class={`terminal-window terminal-window--${plugin.color}`}>
          <div class="terminal-window__bar">
            <div class="terminal-window__buttons">
              <span class="terminal-window__button terminal-window__button--close"></span>
              <span class="terminal-window__button terminal-window__button--min"></span>
              <span class="terminal-window__button terminal-window__button--max"></span>
            </div>
            <div class="terminal-window__title">{plugin.name}</div>
          </div>
          <div class="terminal-window__content">
            <div class="terminal-window__command">
              <span class="prompt">$</span> {plugin.command}<span class="cursor">_</span>
            </div>
            <pre class="terminal-window__ascii">{plugin.ascii}</pre>
            <div class="terminal-window__footer">
              <p>{plugin.description}</p>
              <span class="terminal-window__cta">EXECUTE &rarr;</span>
            </div>
          </div>
        </a>
      </ScrollReveal>
    ))}
  </div>
</section>

<style>
  .plugin-showcase {
    padding: var(--space-2xl) var(--site-padding-x);
    background: var(--color-terminal-black);
    min-height: 100vh;
  }

  .plugin-showcase__header {
    text-align: center;
    margin-bottom: var(--space-2xl);
  }

  .plugin-showcase__title {
    font-size: clamp(3rem, 6vw, 5rem);
    font-weight: var(--weight-black);
    color: var(--color-terminal-white);
    text-transform: uppercase;
    margin-bottom: var(--space-sm);
  }

  .plugin-showcase__subtitle {
    font-size: clamp(1.5rem, 3vw, 2.5rem);
    color: var(--color-muted-gray);
    font-family: var(--font-mono);
  }

  .plugin-showcase__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(500px, 1fr));
    gap: var(--space-xl);
    max-width: 1600px;
    margin: 0 auto;
  }

  /* Terminal Window Styles */
  .terminal-window {
    display: block;
    background: #0a0e14;
    border: 1px solid var(--color-gray-700);
    text-decoration: none;
    transition: transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease;
    height: 100%;
    position: relative;
    overflow: hidden;
  }

  .terminal-window:hover {
    transform: translateY(-5px);
    border-color: var(--color-accent-primary);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
  }

  .terminal-window--secondary:hover {
    border-color: var(--color-accent-secondary);
  }

  .terminal-window--gold:hover {
    border-color: var(--color-highlight-gold);
  }

  .terminal-window__bar {
    background: var(--color-gray-800);
    padding: 0.75rem 1rem;
    display: flex;
    align-items: center;
    border-bottom: 1px solid var(--color-gray-700);
  }

  .terminal-window__buttons {
    display: flex;
    gap: 8px;
  }

  .terminal-window__button {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: var(--color-gray-600);
  }

  .terminal-window:hover .terminal-window__button--close { background: #ff5f56; }
  .terminal-window:hover .terminal-window__button--min { background: #ffbd2e; }
  .terminal-window:hover .terminal-window__button--max { background: #27c93f; }

  .terminal-window__title {
    flex: 1;
    text-align: center;
    font-family: var(--font-mono);
    font-size: 0.875rem;
    color: var(--color-gray-400);
  }

  .terminal-window__content {
    padding: var(--space-lg);
    display: flex;
    flex-direction: column;
    height: calc(100% - 45px); /* Header height approx */
  }

  .terminal-window__command {
    font-family: var(--font-mono);
    color: var(--color-terminal-white);
    margin-bottom: var(--space-lg);
    padding-bottom: var(--space-md);
    border-bottom: 1px dashed var(--color-gray-800);
  }

  .prompt { color: var(--color-accent-primary); }
  .cursor { animation: blink 1s step-end infinite; }

  .terminal-window__ascii {
    font-family: var(--font-mono);
    font-size: 10px;
    line-height: 10px;
    color: var(--color-gray-500);
    overflow: hidden;
    margin-bottom: var(--space-lg);
    flex: 1;
    transition: color 0.3s ease;
    white-space: pre;
  }

  .terminal-window:hover .terminal-window__ascii {
    color: var(--color-accent-primary);
  }

  .terminal-window--secondary:hover .terminal-window__ascii {
    color: var(--color-accent-secondary);
  }

  .terminal-window--gold:hover .terminal-window__ascii {
    color: var(--color-highlight-gold);
  }

  .terminal-window__footer {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    gap: var(--space-md);
  }

  .terminal-window__footer p {
    color: var(--color-terminal-white);
    font-size: 1.25rem;
    font-weight: 500;
    max-width: 70%;
  }

  .terminal-window__cta {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    color: var(--color-accent-primary);
    opacity: 0;
    transform: translateX(-10px);
    transition: all 0.3s ease;
  }

  .terminal-window--secondary .terminal-window__cta { color: var(--color-accent-secondary); }
  .terminal-window--gold .terminal-window__cta { color: var(--color-highlight-gold); }

  .terminal-window:hover .terminal-window__cta {
    opacity: 1;
    transform: translateX(0);
  }

  @keyframes blink { 50% { opacity: 0; } }

  @media (max-width: 768px) {
    .plugin-showcase__grid {
      grid-template-columns: 1fr;
    }
    
    .terminal-window__ascii {
        font-size: 6px;
        line-height: 6px;
    }
  }
</style>
