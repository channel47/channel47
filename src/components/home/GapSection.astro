---
// src/components/home/GapSection.astro
import ScrollReveal from '../shared/ScrollReveal.astro';
---

<section class="gap-section">
  <div class="gap-section__split">
    <!-- Left Side: Minimal (The Problem) -->
    <div class="gap-section__side gap-section__side--minimal">
      <div class="gap-section__content">
        <ScrollReveal direction="up">
          <h2 class="gap-section__heading">Default Claude</h2>
        </ScrollReveal>
        
        <div class="gap-section__visual">
          <ScrollReveal direction="scale">
            <img
              src="/images/toolbox-minimal.png"
              alt="Minimal toolbox"
              class="gap-section__image"
              loading="lazy"
            />
          </ScrollReveal>
        </div>

        <div class="gap-section__list">
          <ScrollReveal direction="up" delay={1}>
            <p class="gap-section__item text-muted">Focused.</p>
          </ScrollReveal>
          <ScrollReveal direction="up" delay={2}>
            <p class="gap-section__item text-muted">Powerful.</p>
          </ScrollReveal>
          <ScrollReveal direction="up" delay={3}>
            <p class="gap-section__item text-highlight">Incomplete.</p>
          </ScrollReveal>
        </div>
      </div>
    </div>

    <!-- Divider -->
    <div class="gap-section__divider">
      <div class="gap-section__divider-line"></div>
      <div class="gap-section__divider-icon">VS</div>
      <div class="gap-section__divider-line"></div>
    </div>

    <!-- Right Side: Complete (The Solution) -->
    <div class="gap-section__side gap-section__side--complete">
      <div class="gap-section__content">
        <ScrollReveal direction="up">
          <h2 class="gap-section__heading text-accent">Power User</h2>
        </ScrollReveal>

        <div class="gap-section__visual">
          <ScrollReveal direction="scale">
            <img
              src="/images/toolbox-complete.png"
              alt="Complete toolbox"
              class="gap-section__image"
              loading="lazy"
            />
          </ScrollReveal>
        </div>

        <div class="gap-section__list">
          <ScrollReveal direction="up" delay={1}>
            <p class="gap-section__item">Specialized Tools.</p>
          </ScrollReveal>
          <ScrollReveal direction="up" delay={2}>
            <p class="gap-section__item">Workflow Automations.</p>
          </ScrollReveal>
          <ScrollReveal direction="up" delay={3}>
            <p class="gap-section__item">MCP Integration.</p>
          </ScrollReveal>
          <ScrollReveal direction="up" delay={4}>
            <p class="gap-section__item text-accent">Unfair Advantage.</p>
          </ScrollReveal>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .gap-section {
    min-height: 100vh;
    background: var(--color-terminal-black);
    position: relative;
    overflow: hidden;
  }

  .gap-section__split {
    display: flex;
    min-height: 100vh;
  }

  .gap-section__side {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: clamp(2rem, 5vw, 4rem);
    position: relative;
  }

  .gap-section__side--minimal {
    background: #0a0e14;
    border-right: 1px solid var(--color-gray-800);
  }

  .gap-section__side--complete {
    background: #0d1219;
    /* Subtle grid pattern */
    background-image: 
      linear-gradient(rgba(0, 255, 159, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(0, 255, 159, 0.03) 1px, transparent 1px);
    background-size: 40px 40px;
  }

  .gap-section__content {
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
    width: 100%;
  }

  .gap-section__heading {
    font-size: clamp(2rem, 4vw, 3.5rem);
    font-weight: var(--weight-black);
    text-transform: uppercase;
    letter-spacing: -0.02em;
    margin-bottom: var(--space-xl);
    color: var(--color-terminal-white);
  }

  .gap-section__visual {
    margin-bottom: var(--space-xl);
    position: relative;
    display: flex;
    justify-content: center;
  }

  .gap-section__image {
    max-width: 100%;
    height: auto;
    max-height: 400px;
    filter: drop-shadow(0 20px 40px rgba(0,0,0,0.5));
    transition: transform 0.5s ease-out;
  }

  .gap-section__side--complete .gap-section__image {
    filter: drop-shadow(0 20px 40px rgba(0, 255, 159, 0.2));
  }

  .gap-section__side:hover .gap-section__image {
    transform: scale(1.05);
  }

  .gap-section__list {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .gap-section__item {
    font-size: clamp(1.25rem, 2.5vw, 2rem);
    font-weight: var(--weight-bold);
    color: var(--color-terminal-white);
    line-height: 1.1;
  }

  .text-muted {
    color: var(--color-muted-gray);
  }

  .text-highlight {
    color: var(--color-terminal-white);
    text-decoration: underline;
    text-decoration-color: var(--color-accent-secondary);
  }

  .text-accent {
    color: var(--color-accent-primary);
  }

  .gap-section__divider {
    position: absolute;
    left: 50%;
    top: 0;
    bottom: 0;
    width: 60px;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    z-index: 10;
    pointer-events: none;
  }

  .gap-section__divider-line {
    width: 2px;
    flex: 1;
    background: var(--color-gray-800);
  }

  .gap-section__divider-icon {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background: var(--color-terminal-black);
    border: 2px solid var(--color-gray-800);
    color: var(--color-muted-gray);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-family: var(--font-mono);
    margin: 1rem 0;
  }

  @media (max-width: 768px) {
    .gap-section__split {
      flex-direction: column;
    }

    .gap-section__divider {
      position: relative;
      left: 0;
      top: 0;
      width: 100%;
      height: 60px;
      transform: none;
      flex-direction: row;
    }

    .gap-section__divider-line {
      width: 100%;
      height: 2px;
    }

    .gap-section__divider-icon {
      margin: 0 1rem;
    }
    
    .gap-section__side {
        padding-top: var(--space-2xl);
        padding-bottom: var(--space-2xl);
    }
  }
</style>
